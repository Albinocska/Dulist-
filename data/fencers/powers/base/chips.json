{
    "name": "Chips",
    "description":"Your have replaced your health with chips. No matter the amount of damage dealt to you, you will only ever lose a single chip. You have a total of ten chips, and you die when you run out",
    "type": "origins:multiple",
    "revives": {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "start_value": 5,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 6,
            "order": 0
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:damage",
                    "amount": 1,
                    "source": {
                        "name": "player",
                        "bypasses_armor": true,
                        "fire": true,
                        "unblockable": true,
                        "magic": true,
                        "out_of_world": true
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_revives",
                    "change": 5,
                    "operation": "set"
                }
            ]
        }
    },
    "reset-revives": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_respawned": {
            "type": "origins:change_resource",
            "resource": "*:*_revives",
            "change": 5,
            "operation": "set"
        }
    },
    "prevent-death": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_revives",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:modify_damage_taken",
        "modifier": {
            "operation": "set_total",
            "value": 0
        },
        "self_action": {
            "type":"origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "fencers:base/invincibility_period",
                "comparison": "==",
                "compare_to": 0 
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:clear_effect"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_revives",
                        "change": -1,
                        "operation": "add"
                                
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "block.glass.break",
                        "volume": 1,
                        "pitch": 1
                    },
                    {
                        "type": "origins:add_velocity",
                        "z": -1,
                        "space": "local",
                        "client": true,
                        "server": true
                    },
                    {
                        "type":"origins:trigger_cooldown",
                        "power": "fencers:base/invincibility_period"
                    }
                ]
            },
            "else_action": {
                "type": "origins:nothing"
            } 
        }
    },
    "key3": {
        "type": "origins:attribute",
        "modifier": {
            "attribute": "minecraft:generic.max_health",
            "operation": "addition",
            "value": -18
        },
        "update_health": true
    }
}